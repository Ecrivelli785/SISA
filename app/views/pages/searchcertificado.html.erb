
<h3>Resultados encontrados</h3>
<div calss="container" style="overflow-y: scroll; height:400px; overflow-x: scroll; width:1000px">
 <table>
 <thead>
    <tr>
      <th>Nro certificado</th>
      <th>Rubro</th>
      <th>Tratamiento</th>
      <th>Vectores</th>
      <th>Superficie</th>
      <th>Veneno</th>
      <th>Fecha aplicacion</th>
      <th>Fecha vencimiento</th>
      <th>Hora aplicacion</th>
      <th>Codigo</th>
      <th>Id cliente</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.nro_certificado %></td>
        <td><%= result.id_rubro %></td>
        <td><%= result.id_tratamiento %></td>
        <td><%= result.id_vector %></td>
        <td><%= result.superficie%></td>
        <td><%= result.id_drogas %></td>
        <td><%= result.fecha_aplicacion %></td>
        <td><%= result.fecha_vencimiento %></td>
        <td><%= result.hora_aplicacion %></td>
        <td><%= result.codigo %></td>
        <td><%= result.id_cliente %></td>
         <td><%= button_to  'Detalle', result, method: :get %></td>
        <td><%= button_to 'Eliminar', certificado_path(result),method: :delete, data: { confirm: "EstÃ¡s seguro?" }  %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
