

<div class="col-9">
<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <div>
    <h1>Técnicos</h1>
  </div>
  <div>
    <%= link_to 'Nuevo Cliente', new_tecnico_path, class: 'btn btn-success btn-cliente' %>
  </div>
</div>
 <%= form_tag(search_page_path, :method => "get") do %>
  <div class="input-group my-3">
    <%= search_field_tag :search, params[:search], placeholder: "Buscar...", class: "form-control" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Dni</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Domicilio</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tecnicos.each do |tecnico| %>
      <%if tecnico.estado == true %>
        <tr>
          <td><%= tecnico.dni %></td>
          <td><%= tecnico.apellido %></td>
          <td><%= tecnico.nombre %></td>
          <td><%= tecnico.domicilio %></td>
          <td><%= tecnico.telefono %></td>
          <td><%= button_to  'Detalle', tecnico, method: :get %></td>
          <td><%= button_to  'Editar', edit_tecnico_path(tecnico),method: :get %></td>
          <td><%= button_to 'Eliminar', tecnico_path(tecnico),method: :delete, data: { confirm: "Estás seguro?" }  %></td>
        </tr>
      <% else %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tecnico', new_tecnico_path %>
</div>
</div>
