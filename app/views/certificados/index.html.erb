<p id="notice"><%= notice %></p>


<div class="d-flex justify-content-between">
  <div>
    <h1>Certificados</h1>
  </div>
  <div>
    <%= link_to 'Nuevo Certificado',  new_certificado_path, class: 'btn btn-success btn-cliente' %>
  </div>
</div>
  <%= form_tag(search_page_path, :method => "get") do %>
<div class="input-group my-3">
  <%= search_field_tag :search, params[:search], placeholder: "Buscar...", class: "form-control" %>
</div>
<% end %>

<div calss="container" style="overflow-y: scroll; height:400px; overflow-x: scroll; width:1000px">
<table>
  <thead>
    <tr>
      <th>Nro certificado</th>
      <th>Rubro</th>
      <th>Tratamiento</th>
      <th>Vectores</th>
      <th>Superficie</th>
      <th>Veneno</th>
      <th>Fecha aplicacion</th>
      <th>Fecha vencimiento</th>
      <th>Hora aplicacion</th>
      <th>Codigo</th>
      <th>Id cliente</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificados.each do |certificado| %>
      <tr>
        <td><%= certificado.id %></td>
        <td><%= certificado.nro_certificado %></td>
        <td><%= certificado.id_rubro %></td>
        <td><%= certificado.id_tratamiento %></td>
        <td><%= certificado.id_vector %></td>
        <td><%= certificado.superficie%></td>
        <td><%= certificado.id_drogas %></td>
        <td><%= certificado.fecha_aplicacion %></td>
        <td><%= certificado.fecha_vencimiento %></td>
        <td><%= certificado.hora_aplicacion %></td>
        <td><%= certificado.codigo %></td>
        <td><%= certificado.id_cliente %></td>
        <td><%= link_to 'Show', certificado %></td>
        <td><%= link_to 'Edit', edit_certificado_path(certificado) %></td>
        <td><%= link_to 'Destroy', certificado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</div>
</table>

<br>

<%= link_to 'New Certificado', new_certificado_path %>
