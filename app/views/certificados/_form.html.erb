
<%= simple_form_for(@certificado) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :id_certificado %>
    <%= f.input :nro_certificado %>
    <%= f.input :rubro %>
    <%= f.input :tratamiento %>
    <%= f.input :otro_tratamiento %>
    <%= f.input :vectores_tratados %>
    <%= f.input :otros_vectores %>
    <%= f.input :superficie_tratada %>
    <%= f.input :veneno_clase %>
    <%= f.input :droga_usada %>
    <%= f.input :otra_droga_usada %>
    <%= f.input :fecha_aplicacion %>
    <%= f.input :fecha_vencimiento %>
    <%= f.input :hora_aplicacion %>
    <%= f.input :proximo_tratamiento %>
    <%= f.input :estado %>
    <%= f.input :importe %>
    <%= f.input :id_cliente %>
    <%= f.association :cliente %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
