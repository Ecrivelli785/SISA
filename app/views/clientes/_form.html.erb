
<%= simple_form_for(@cliente) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :id_cliente %>
    <%= f.input :apellido %>
    <%= f.input :nombre %>
    <%= f.input :domicilio %>
    <%= f.input :telefono %>
    <%= f.input :celular %>
    <%= f.input :barrio %>
    <%= f.input :rubro %>
    <%= f.input :estado %>
    <%= f.input :estado_mkt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
